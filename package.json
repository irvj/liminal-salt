{
  "name": "liminal-salt",
  "version": "0.2.1",
  "description": "Tailwind CSS build tooling for Liminal Salt. Version follows Python package.",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -n tailwind,django -c blue,green \"npm run watch:css\" \"python3 manage.py runserver\"",
    "watch:css": "npx @tailwindcss/cli -i ./chat/static/css/input.css -o ./chat/static/css/output.css --watch --minify",
    "build:css": "npx @tailwindcss/cli -i ./chat/static/css/input.css -o ./chat/static/css/output.css --minify",
    "version:patch": "python3 scripts/bump_version.py patch",
    "version:minor": "python3 scripts/bump_version.py minor",
    "version:major": "python3 scripts/bump_version.py major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/irvj/liminal-salt.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/irvj/liminal-salt/issues"
  },
  "homepage": "https://github.com/irvj/liminal-salt#readme",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.18"
  }
}
